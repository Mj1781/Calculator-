#include<stdio.h>
int main()
{
	char op;
	float a,b;
	printf("Enter a operator ('+','-','*','/')");
	scanf("%c",&op);
	printf("Enter first number");
	scanf("%f",&a);
	printf("Enter second number");
	scanf("%f",&b);
	switch(op){ 
		case '+'://condition
		printf("%f+%f=%f",a,b,a+b);//statement 
		break;
		
		case '-':
			printf("%f-%f=%f",a,b,a/b);
			break;
	    
	    case '*':
	    	printf("%f*%f=%f",a,b,a*b);
	    	break;
	    	
	    	case '/':
	    		printf("%f/%f=%f",a,b,a/b);
	    		break;
	
	}}
